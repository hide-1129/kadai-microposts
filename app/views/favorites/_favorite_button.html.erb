<% if current_user.fav_microposts?(microposts) %>
  <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id), local: true, method: :dalete) do |f| %>
    <%= hidden_field_tag :micropost_id, @microposts %>
    <%= f.submit 'unfavorite', class: 'btn btn-danger btn-block' %>
  <% end %>
    
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :micropost_id, @microposts %>
    <%= f.submit 'favorite', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>
